# Environment Variables for Chicken Poop Bingo Deployment
# Copy this file to .env and update the values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://app_user:your_secure_database_password_here@database:5432/chicken_poop_bingo

# Stripe Payment Configuration (Required for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Application Configuration
NODE_ENV=production
PORT=5000

# Optional: Session Secret (for enhanced security)
SESSION_SECRET=your_random_session_secret_here

# Optional: CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Account Information
VITE_VENMO_USERNAME=your_venmo_username_here
VITE_ZELLE_EMAIL=your_zelle_email@example.com